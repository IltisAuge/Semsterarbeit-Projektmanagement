<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonStyle">@style/blue_btn</item>
    </style>

    <style name="blue_btn" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/roundcorners</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="red_btn" parent="blue_btn">
        <item name="android:backgroundTint">#C62828</item>
    </style>
</resources>